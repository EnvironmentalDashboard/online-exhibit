<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="/css/exhibit.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    </head>
    <body>
      <div class="presentation">
          <iframe class="frame" id="slideurl" src=<%= @initial.pres_path %>></iframe>
      </div>
      <div class="controller" >
          <% @buttons.each do |button| %>
          <div class="col">
            <% if button.external %>
            <a href="<%= button.external_link %>" <img class="buttons" src="<%= button.img_path %>"> </a>
            <p class="below"> <%= button.caption %> </p>
            <% else %>
            <img class="buttons" src="<%= button.img_path %>" onclick="document.getElementById('slideurl').src='<%= button.pres_path %>'" >
            <p class="below"> <%= button.caption %> </p>
            <% end %>
            </div>

        <% end %>
        </div>
        </body>
        </html>
